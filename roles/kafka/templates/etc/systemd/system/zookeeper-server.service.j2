[Unit]
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
User={{ kafka_user }}
ExecStart={{ kafka_install_dir }}kafka/bin/zookeeper-server-start.sh {{ kafka_install_dir }}kafka/config/zookeeper.properties
ExecStop={{ kafka_install_dir }}kafka/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target
